<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_list_child_item_height"
    android:paddingLeft="@dimen/group_list_child_item_start_margin"
    android:paddingStart="@dimen/group_list_child_item_start_margin"
    android:paddingRight="@dimen/group_list_child_item_end_margin"
    android:paddingEnd="@dimen/group_list_child_item_end_margin"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/group_list_child_item_title_size"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/standard_side_padding_small"
            android:layout_marginStart="@dimen/standard_side_padding_small"
            android:drawablePadding="@dimen/standard_side_padding_mini"
            android:drawableRight="@drawable/ic_person_outline_black_18dp"
            android:drawableTint="@color/black_40_opacity"
            android:gravity="center"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/group_list_child_item_title_size"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/standard_side_padding_small"
            android:layout_marginStart="@dimen/standard_side_padding_small">

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="@dimen/standard_icon_size"
                android:layout_height="@dimen/standard_icon_size"
                android:layout_gravity="center"
                android:contentDescription="@null"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
