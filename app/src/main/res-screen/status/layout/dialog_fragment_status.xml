<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/standard_side_padding_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_side_padding_dialog"
        android:gravity="center_horizontal"
        android:text="@string/status_screen_title"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/standard_title_text_size"
        android:textStyle="bold"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_side_padding">

        <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView
            android:id="@+id/circle_loading_view"
            android:layout_width="@dimen/status_progress_size"
            android:layout_height="@dimen/status_progress_size"
            android:layout_gravity="center"
            app:mainColor="@color/status_progress_main_color"
            app:secondaryColor="@color/status_progress_secondary_color"
            app:textColor="@color/status_progress_text_color" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_side_padding"
        android:layout_marginBottom="@dimen/standard_side_padding">

        <Button
            android:id="@+id/btn_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?selectableItemBackground"
            android:text="@string/status_button_report"
            android:textColor="?attr/colorAccent"
            android:visibility="invisible"/>
    </FrameLayout>
</LinearLayout>
