<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/app_bar_with_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tv_post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_side_padding"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris pretium quis mauris eget dapibus. Aenean a lacus posuere, pretium sem nec, consectetur tortor. Nunc condimentum dignissim purus sit amet lacinia. Quisque ac diam odio. Nullam imperdiet, leo eu auctor posuere, turpis nisi condimentum ex, quis cursus lorem nisl vel odio. Donec tempus, ligula in vestibulum hendrerit, elit neque lobortis diam, et malesuada metus urna et tortor. Mauris libero ipsum, imperdiet at mi vitae, consectetur tincidunt sem. Nunc fermentum sagittis congue"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/standard_description_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_side_padding">

            <View
                android:id="@+id/iv_1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:layout_alignParentLeft="true"
                android:background="@color/accent"/>

            <View
                android:id="@+id/iv_2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:background="@color/accent"/>

            <View
                android:id="@+id/iv_3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_below="@id/iv_1"
                android:layout_alignParentLeft="true"
                android:background="@color/accent"/>

            <View
                android:id="@+id/iv_4"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_below="@id/iv_1"
                android:layout_toRightOf="@id/iv_3"
                android:background="@color/accent"/>

            <View
                android:id="@+id/iv_5"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_below="@id/iv_1"
                android:layout_alignParentRight="true"
                android:background="@color/accent"/>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/toolbar_dropshadow" />

</android.support.design.widget.CoordinatorLayout>
