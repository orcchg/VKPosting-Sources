<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/post_list_item_size"
    android:layout_height="@dimen/post_list_item_size"
    android:layout_margin="@dimen/post_list_item_margin_up"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorAccent">

        <ImageView
            android:layout_width="@dimen/standard_icon_big_size"
            android:layout_height="@dimen/standard_icon_big_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_add_white_48dp"/>
    </FrameLayout>
</FrameLayout>
