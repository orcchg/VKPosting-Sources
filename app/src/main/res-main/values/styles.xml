<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentOverlay">@color/colorAccentOverlay</item>
        <item name="android:actionBarSize">@dimen/toolbar_min_height</item>
        <item name="actionMenuTextColor">@color/textIcons</item>

        <item name="keywords_flow_layout_blob_active_edit_color">@drawable/keywords_blob_active_edit_bg</item>
        <item name="keywords_flow_layout_blob_active_edit_cross">@drawable/keywords_blob_active_edit_cross</item>
        <item name="keywords_flow_layout_blob_active_color">@drawable/keywords_blob_active_bg</item>
        <item name="keywords_flow_layout_blob_passive_color">@drawable/keywords_blob_passive_bg</item>
        <item name="keywords_flow_layout_blob_more_color">@drawable/keywords_blob_more_selector</item>
        <item name="keywords_flow_layout_blob_more_text_color">@drawable/keywords_blob_more_text_selector</item>

        <item name="spbStyle">@style/SmoothProgressBar</item>
        <item name="cpbStyle">@style/CircularThemeProgressBar</item>
    </style>

    <style name="CircularThemeProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="cpb_color">@color/cpb_default_color</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <style name="KeywordsFlowLayoutBlob">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/keyword_blob_text_size</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="Block"/>
    <style name="Block.Title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">@dimen/keyword_block_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
