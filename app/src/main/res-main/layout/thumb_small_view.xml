<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/standard_thumbnail_size_small"
        android:layout_height="@dimen/standard_thumbnail_size_small"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/standard_side_padding_mini"
        android:layout_marginStart="@dimen/standard_side_padding_mini"
        android:layout_marginRight="@dimen/standard_side_padding_mini"
        android:layout_marginEnd="@dimen/standard_side_padding_mini"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_corner_icon"
        android:layout_width="@dimen/standard_icon_micro_size"
        android:layout_height="@dimen/standard_icon_micro_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>
</RelativeLayout>
