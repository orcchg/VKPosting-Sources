<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_empty_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTint="@color/black_40_opacity"
        android:drawableLeft="@drawable/ic_search_black_48dp"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="@string/empty_data"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/standard_title_text_size"/>

    <Button
        android:id="@+id/btn_empty_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_empty_data"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:background="?selectableItemBackground"
        android:text="@string/empty_btn_label"
        android:textColor="?attr/colorAccent"
        android:textSize="@dimen/standard_button_text_size"/>
</RelativeLayout>
